<nav aria-label="..." class="mt-5 d-flex justify-content-center">
    <ul class="pagination">
        <% if (currentPage == 1) { %>
            <li class="page-item disabled">
                <a class="page-link" aria-label="First Page">
                    <span aria-hidden="true">&laquo;</span>
                </a>                    
            </li>
        <% } else { %>
            <li class="page-item">
                <a class="page-link" aria-label="First Page" href="/<%= pageName %>?page=1">
                    <span aria-hidden="true">&laquo;</span>
                </a>                    
            </li>
        <% } %>

        <% if (currentPage > 3) { %>
            <li class="page-item"><a class="page-link" href="#">...</a></li>
        <% } %>

        <% for (let i = Math.max(1, Number(currentPage) - 2); i <= Math.min(Number(currentPage) + 2, pages); i++) { %>
            <% if (i == currentPage) { %>
                <li class="page-item active"><a class="page-link" href="#"><%= i %></a></li>
            <% } else { %>
                <li class="page-item"><a class="page-link" href="/<%= pageName %>?page=<%= i %>"><%= i %></a></li>
            <% } %>
        <% } %>

        <% if (Number(pages) - Number(currentPage) > 2) { %>
            <li class="page-item"><a class="page-link" href="#">...</a></li>
        <% } %>

        <% if (currentPage == pages) { %>
            <li class="page-item disabled">
                <a class="page-link" aria-label="Last Page">
                    <span aria-hidden="true">&raquo;</span>
                </a>                    
            </li>
        <% } else { %>
            <li class="page-item">
                <a class="page-link" aria-label="Last Page" href="/<%= pageName %>?page=<%= pages %>">
                    <span aria-hidden="true">&raquo;</span>
                </a>                    
            </li>
        <% } %>
    </ul>
</nav>