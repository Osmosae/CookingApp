<h1>Search</h1>
<% if (count != 0) {%>
    <h3>There are <%=count%> results for: "<%=userSearch%>"</h3>
<% } %>
<section class="pb-4 pt-4">
    
        <% if (food!="") { %>
            <div class="row row-cols-2 row-cols-lg-4 g-2 g-lg-3">
                <% food.forEach(function(recipe, index){ %>
                    <a href="/recipe/<%= recipe.url %>" class="col text-center category__link">
                        <div class="category__img category__img--Large shadow">
                            <img src="img/recipes/<%= recipe.image %>" alt="<%= recipe.name %>" loading="lazy" />
                        </div>
                        <div class="pt-1"><%= recipe.name %></div>
                    </a>
                <% }) %>
            </div>
        <% } else { %>
            <h3 class="py-4"> Sorry no results found for "<%= userSearch%>" - <a href="/">Back</a></h2>
        <% } %>

        <% if(food.length > 0) { %>
            <%- include("../views/partials/paginationSearch.ejs") %>
        <% } %>
    
</section>