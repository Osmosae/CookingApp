<div class="px-4 py-5 my-5 text-center">
    <h1 class="display-5 fw-bold">Submit Your Recipe</h1>
    <div class="col-lg-6 mx-auto">
        <p class="lead">Lorem ipsum dolor sit amet consectetur adipisicing elit. Maiores quaerat dignissimos fugit rem ipsa aliquid.</p>
    </div>
</div>

<div class="row justify-content-center">
    <% if(infoSubmitObj != "") { %>
        <div class="col-10 alert alert-success" role="alert">
            <%= infoSubmitObj %>
        </div>
    <% } %> 
    <% if(infoErrorsObj != "") { %>
        <div class="col-10 alert alert-danger" role="alert">
            <%= infoErrorsObj %>
        </div>
    <% } %>         
    <div class="col-10 container">
        <form action="/submit-recipe" enctype="multipart/form-data" method="post" class="submitForm needs-validation" novalidate="">
            <div class="row g-3">
                <div class="card card-body">
                    <div class="col-12 pt-2">
                            <div class="mb-1 row g-1">
                                <div class="col-9 inputBox">
                                    <label for="recipeName" class="ms-2 position-absolute">
                                        <span class="h6 small bg-white text-muted px-1">Recipe Name</span>
                                    </label>
                                    <input type="text" class="form-control mt-2 border border-top-0" id="recipeName">
                                </div>
                                <div class="col-1 inputBox">
                                    <input type="number" name="servings" id="servings" class="form-control mt-2 border border-top-0" required>
                                    <label for="servings" class="ms-2 position-absolute">
                                        <span class="h6 small px-1">Servings</span>
                                    </label>
                                </div>
                                <div class="col-2 inputBox">
                                    <input type="number" name="servings" id="servings" class="form-control mt-2 border border-top-0" required>
                                    <label for="servings" class="ms-2 position-absolute">
                                        <span class="h6 small px-1">Total Time</span>
                                    </label>
                                </div>
                                <div class="col-2 inputBox">
                                    <input type="number" name="servings" id="servings" class="form-control" required>
                                    <span>Prep Time</span>
                                </div>
                                <div class="col-2 inputBox">
                                    <input type="number" name="servings" id="servings" class="form-control" required>
                                    <span>Cook Time</span>
                                </div>
                            </div>
                    </div>
                </div>
                <div class="card card-body">
                    <div class="col-12">
                        <label for="ingredients" class="form-label">Ingredients:</label>
                        <div class="ingredientList">
                            <div class="ingredientDiv mb-1 row g-1">
                                <div class="col-2 ingredientInputBox">
                                    <input type="number" name="ingredients" class="form-control">
                                </div>
                                <div class="col-2 ingredientInputBox">
                                    <input class="form-control" list="unitOptions" id="unitList" placeholder="unit...">
                                    <datalist id="unitOptions">
                                        <option value="Grams">
                                        <option value="Kilograms">
                                        <option value="Tonnes">
                                        <option value="Pounds (UK)">
                                        <option value="Pounds (US)">
                                        <option value="Ounces (UK)">
                                        <option value="Ounces (US)">
                                        <option value="Pieces">
                                        <option value="Cubes">
                                        <option value="Bits">
                                        <option value="Splash">
                                        <option value="Dollop">
                                        <option value="Shake">
                                        <option value="Sprinkle">
                                    </datalist>
                                </div>
                                <div class="col-4 ingredientInputBox">
                                    <!-- <label for="exampleDataList" class="form-label">Datalist example</label> -->
                                    <input class="form-control" list="ingredientOptions" id="ingredientList" placeholder="ingredient..." required>
                                    <datalist id="ingredientOptions">
                                        <option value="Chicken">
                                        <option value="Beef">
                                        <option value="Lamb">
                                        <option value="Pork">
                                        <option value="Vegetable">
                                        <option value="Feesh">
                                    </datalist>
                                </div>
                                <div class="col-4 ingredientInputBox">
                                    <input type="text" name="ingredients" class="form-control" placeholder="Notes">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 ingredientBtns">
                        <button type="button" class="btn btn-success" id="addIngredientBtn"><i class="bi bi-plus-circle-fill"></i></button>
                        <button type="button" class="btn btn-danger" id="removeIngredientBtn"><i class="bi bi-x-circle-fill"></i></button>
                    </div>
                </div>
                <div class="card card-body">
                    <div class="col-12">
                        <label for="directions" class="form-label">Directions:</label>
                        <div class="col-12">
                            <div class="directionList">
                                <div class="directionDiv mb-1 form-floating input-group">
                                    <span class="input-group-text">Step 1</span>
                                    <textarea name="directions" id="direction" class="form-control" aria-label="Step 1" required></textarea>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 directionBtns">
                        <button type="button" class="btn btn-success" id="addDirectionBtn"><i class="bi bi-plus-circle-fill"></i></button>
                        <button type="button" class="btn btn-danger" id="removeDirectionBtn"><i class="bi bi-x-circle-fill"></i></button>
                    </div>
                </div>
                <div class="col-12">
                    <label for="category">Select Category</label>
                    <select name="category" id="" class="form-select form-control" aria-label="Category">
                        <option selected>Select Category</option>
                        <% cuisineOptions.forEach(cuisine => { %>
                            <option value="<%= cuisine.name %>"><%= cuisine.name %></option>
                       <% }) %>
                    </select>
                </div>
                <div class="col-3 cuisineInputBox">
                    <input class="form-control" list="cuisines" id="cuisineTags" placeholder="American, Thai, Indian .....">
                    <datalist id="cuisines">
                        <% cuisineOptions.forEach(cuisine => { %>
                            <option value="<%= cuisine.name %>">
                       <% }) %>
                    </datalist>
                </div>
                <div class="col-12">
                    <button type="submit" class="btn btn-primary">Submit Recipe</button>
                </div>
            </div>
        </form>
        <form class="card card-body">
            <div class="row">
                <div class="col px-1 mb-2">
                    <label for="input1" class="ms-2 position-absolute">
                        <span class="h6 small bg-white text-muted px-1">Username</span>
                    </label>
                    <input type="text" class="form-control mt-2" id="input1">
                </div>
                <div class="col px-1 mb-2">
                    <label for="input2" class="ms-2 position-absolute" style="margin-top: -0.25rem">
                        <span class="h6 small bg-white text-muted px-1">Password</span>
                    </label>
                    <input type="password" class="form-control mt-2" id="input2">
                </div>
            </div>
          </form>
          
    </div>
</div>

